{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "UserID": {
          "type": "string",
          "title": "User ID",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
        "name": {
          "title": "Name",
          "type": "string"  
        },
        "Teams": {
          "properties": {
            "Team 1": {
              "type": "string",
              "title": "Team 1"
            },
            "Team 2": {
              "type": "string",
              "title": "Team 2"
            },
            "Team 3": {
              "type": "string",
              "title": "Team 3"
            }
          }
        },
        "Professional Account": {
          "title": "Professional Account",
          "type": "boolean"
        },
        "newsletter": {
          "title": "Subscribe to newsletter",
          "type": "boolean"
        },
        "Display Barcode": {
          "title": "Display barcode in search results",
          "type": "boolean"
        },
        "Add Edit Link": {
          "title": "Add an edit link in search results",
          "type": "boolean"
        }
      },
      "required": [
        "email",
        "UserID"
      ],
      "additionalProperties": false
    }
  }
}
